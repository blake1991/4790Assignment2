@model Assignment1.Models.View_Models.CourseAndSections

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.course.courseNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.course.courseNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.course.courseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.course.courseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.course.creditHours)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.course.creditHours)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.course.maxEnrollment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.course.maxEnrollment)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.course.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.sections.ElementAt(0).sectionId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sections.ElementAt(0).sectionNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sections.ElementAt(0).courseNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sections.ElementAt(0).sectionDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sections.ElementAt(0).sectionTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.sections)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.sectionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sectionNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.courseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sectionDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sectionTime)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
